class Article:
    
    def __init__(self, source, title, text):
        source = source.upper()
        self.__source = [source, 0]
        self.__title = title
        self.__text = text
        self.__color = "000000"
        
        if source != "INTRO":
            if source == "INKUBIO":
                self.__source[1] = 1
                self.__color = "008542"
            elif source == "AYY":
                self.__source[1] = 2
                self.__color = "b11a9a"
            elif source == "AALTO":
            	self.__source[1] = 3
            	self.__color = "035f98"
            else:
                self.__source[0] = "OTHER"
                self.__source[1] = 4
                self.__color = "fe9a00"
    
    def get_source(self):
        return self.__source[0]
    def get_sourceNo(self):
        return self.__source[1]
    def get_color(self):
        return self.__color
    def get_title(self):
        return self.__title
    def get_text(self):
        return self.__text
    def set_text(self, new_text):
        self.__text = new_text
